<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= link_to 'Show', [event.project, event] %></td>
        <% if policy(event).modify? %>
          <td><%= link_to 'Edit', [:edit, event.project, event] %></td>
          <td><%= link_to 'Destroy',
            [event.project, event],
            method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Event', new_project_event_path(@project.id) %>
