<%= form_for([project, task], url: url) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br/>
    <%= f.date_field :due_date %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
