<h1>Tasks in this project</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Deadline</th>
      <th>Description</th>
      <th>Finished</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.due_date %></td>
        <td><%= task.description[0, 100] %>...</td>
        <td>
          <% if task.done %>
            X
          <% end %>
        </td>
        <td><%= link_to "Show", [task.project, task], class: "btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create new task",
  new_project_task_path(@project.id),
  class: "btn" %>

<%= link_to "Back to project",
  project_path(@project.id),
  class: "btn" %>
