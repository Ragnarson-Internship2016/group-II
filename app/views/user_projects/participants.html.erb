<h2>Participants of: <%= @project.title %></h2>

<div class="grid grid-middle">
  <div class="grid-item 1/5">
    <h3>Manager</h3>
  </div>
  <div class="grid-item 4/5">
    <h4>
      <%= "#{@manager.name} #{@manager.surname}" %>
    </h4>
  </div>
</div>


<div class="grid grid-top">
  <div class="grid-item 1/5">
    <h3>Contributors</h3>
  </div>
  <div class="grid-item 4/5">
    <% if @contributors.empty? %>
      <p>None</p>
    <% else %>
      <div class="grid grid-middle">
        <% @contributors.each do |contributor| %>
        <% if policy(@project).modify? %>
          <div class="grid-item 1/10 mobile-1/5 my-padding">
              <%= link_to "-", project_destroy_path(project_id: @project.id, user_id: contributor.id), method: :delete, class: "btn" %>
          </div>
          <% end %>
          <div class="grid-item 9/10 mobile-4/5 my-padding">
            <%= "#{contributor.name} #{contributor.surname}" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<% if policy(@project).modify? %>
  <%= link_to "Add user - wait", link_contributors_project_path(@project), class: "btn" %>
<% end %>
