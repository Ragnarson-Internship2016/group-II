<div class="grid-item form-box 2/5 medium-3/6 tablet-3/5 mobile-1/1 horizontal-center">
  <h2>Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-stacked" }) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>

    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off" %>

    <div class="grid grid-pair">
      <div class="grid-item 2/3 mobile-1/1">
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        <% end -%>
      </div>

      <div class="grid-item 1/3 mobile-1/1">
        <%= f.submit "Log in", class: "btn btn-submit" %>
      </div>
    </div>
  <% end %>
</div>
